<% content_for(:head_title_contrib) do %>: <%= t 'node.list.title' %><% end %>
<h2 class="title"><%= t 'node.list.title' %></h2>
<div id="node_list">
	<table>
	  <tr>
	    <th><%= t 'node.type.title' %></th>
	    <th><%= t 'node.title' %></th>
	    <th><%= t 'node.summary' %></th>
	    <th><%= t 'node.edit.title' %></th>
	    <th><%= t 'node.destroy.title' %></th>
	  </tr>

	<% @nodes.each do |node| %>
	  <tr>
	  	<td><%= image_tag '/images/node_type_' + node.node_type + '.png', :size => '40x40' %></td>
	    <td><%= link_to node.title, node %></td>
	  	<td><%=h node.summary %></td>
	    <td><%= link_to t('edit'), edit_node_path(node) %></td>
	    <td><%= link_to t('destroy'), node, :confirm => t('confirmation_question'), :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>