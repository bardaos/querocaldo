<% content_for(:head_title_contrib) do %>: <%= t 'contact.title' %><% end %>
<div id="contact_page">
	<h2 class="title"><%= t 'contact.title' %></h2>
	<div>
		<div id="contact_info">
			<%= t 'contact.content', :email => "<b><a href='mailto:" + @contact_email + "'>" + @contact_email + "</a></b>" %>
		</div>

        <% if flash[:warning] or flash[:notice] %>
        <div id="errorExplanation"<% if flash[:warning] %>class="warning"<% end %>><%= flash[:warning] || flash[:notice] %>
        </div>
        <script type="text/javascript">
            setTimeout("new Effect.Fade('notice');", 15000)
        </script>
				<br/>
        <% end %>

        <% form_for :email, @email, :url => { :controller => "contact", :action => "send_mail" } do |f| %>
        <table>
            <tr>
                <td>
                    <label for="email_name">
                       <%= t 'email.name' %>:
                    </label>
                </td>
                <td>
                    <%= f.text_field :name, :size => 30 %>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="email_address">
                        <%= t 'email.address' %>:
                    </label>
                </td>
                <td>
                    <%= f.text_field :address, :size => 30 %>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="email_subject">
                        <%= t 'email.subject' %>:
                    </label>
                </td>
                <td>
                    <%= f.text_field :subject, :size => 40 %>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="email_body">
                        <%= t 'email.body' %>:
                    </label>
                </td>
                <td>
                    <%= f.text_area :body, :rows => 8, :cols => 35 %>
                </td>
            </tr>
        </table>
		<div>
         	<%= f.submit t('email.send'), :class => 'button_mail' %>
		</div>
        <% end %>
	</div>
</div>