<script type="text/javascript">
$(document).ready(function() {
  jQuery("#last_node_accordion").accordion();
});
</script>

<div id="last_nodes" class="boxed boxed1">
	<h2><%= t 'home.last_nodes' %></h2>
	<ul id="last_node_accordion">
<% for node in @last_nodes %>
		<li><a href="#"><%= node.title %></a>
		<div class="clob">
			<%= node.summary %>
			<br/>
			<a class="show_in_map" href="javascript:centerMap(<%= node.lat %>,<%= node.lng %>)"><%= t 'show_in_map' %></a> |
			<%= link_to t('more_info'), node, :class => 'more_info' %>
		</div>
		</li>
<% end %>
	</ul>
</div>